[Unit]
Description=mono FCGI by Kendo Team
After=network-online.target

[Service]
PIDFile=/var/run/mono-fcgi.pid
Environment="DEMOS=/{{ansible_env.SUDO_USER}}/demos/mvc/"
ExecStart=/usr/bin/fastcgi-mono-server4 \
        /applications="/demos:$DEMOS,/demos-kendo-ui:$DEMOS,/demos-php-ui:$DEMOS,/demos-jsp-ui:$DEMOS,/demos-aspnet-mvc:$DEMOS" \
        /socket="unix:/var/run/mono-fcgi.sock"
Restart=on-abort
User=www-data
Group=www-data
