using System;
using System.Collections.Generic;
using Kendo.Mvc.Extensions;
using Kendo.Mvc.UI;
using System.Linq;
using Microsoft.AspNetCore.Razor.TagHelpers;

namespace Kendo.Mvc.TagHelpers
{
    public partial class <%= taghelper_class %>
    {
% unique_options.map { |o| o.to_full_declaration }.each do |ser|
% _erbout << ser
%end
% if (collection_component? || composite_component?) then
% _erbout << "        internal Dictionary<string, object> Serialize()\n"
% else
% _erbout << "        protected override Dictionary<string, object> SerializeSettings()\n"
% end
        {
% if (collection_component? || composite_component?) then
% _erbout << "            var settings = new Dictionary<string, object>();\n"
% else
% _erbout << "            var settings = base.SerializeSettings();\n"
% end

% unique_options.map { |o| o.to_tag_helper_serialization }.each do |ser|
% _erbout << ser
%end
            return settings;
        }
    }
}
