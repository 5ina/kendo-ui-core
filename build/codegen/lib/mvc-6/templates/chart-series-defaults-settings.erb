using System.Collections.Generic;
using System.Linq;

namespace Kendo.Mvc.UI
{
    /// <summary>
    /// Defines the Chart series defaults settings
    /// </summary>
    public partial class ChartSeriesDefaultsSettings<T> where T : class
    {
% CHART_SERIES.each do |type|
        /// <summary>
        /// The <%= type %> series default settings.
        /// </summary>
        public ChartSeries<T> <%= type %> { get; } = new ChartSeries<T>();

% end

        public IDictionary<string, object> Serialize()
        {
            var settings = new Dictionary<string, object>();

% CHART_SERIES.each do |type|
            var <%= type.camelize %> = <%= type %>.Serialize();
            if (<%= type.camelize %>.Any())
            {
                settings["<%= type.camelize %>"] = <%= type.camelize %>;
            }

% end

            return settings;
        }
    }
}
