using System.Collections.Generic;
using System.Linq;

namespace Kendo.Mvc.UI
{
    /// <summary>
    /// Defines the Chart series defaults settings
    /// </summary>
    public partial class ChartSeriesDefaultsSettings<T> where T : class
    {
% CHART_SERIES.each do |series|

        /// <summary>
        /// The <%= series[:type] %> series default settings.
        /// </summary>
        public ChartSeries<T> <%= series[:type] %> { get; } = new ChartSeries<T>();
% end

        public IDictionary<string, object> Serialize()
        {
            var settings = new Dictionary<string, object>();
% CHART_SERIES.each do |series|

% if series[:type].upcase.eql?(series[:type])
            var <%= series[:type].downcase %> = <%= series[:type] %>.Serialize();
            if (<%= series[:type].downcase %>.Any())
            {
                settings["<%= series[:type].downcase %>"] = <%= series[:type].downcase %>;
            }
% else
            var <%= series[:type].camelize %> = <%= series[:type] %>.Serialize();
            if (<%= series[:type].camelize %>.Any())
            {
                settings["<%= series[:type].camelize %>"] = <%= series[:type].camelize %>;
            }
% end
% end

            return settings;
        }
    }
}
