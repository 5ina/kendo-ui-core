% classes.each do |the_class|
% if the_class.namespace.include? "kendo.ui"
% puts the_class.full_name
{
    "$schema": "http://json-schema.org/schema#",
    "id": "<%= the_class.full_name %>",
    "type" "object",
    "description": "<%= the_class.namespace %>",
    "properties": {
        <% the_class.options.each do |option| %>{
            "<%= option.name %>" : {
                "type": "<%= option.type.first %>",
                "description": "<%= option.description %>"
            }
        }<% if option != the_class.options.last %>, <% end %>
        <% end %>
    }
}<% if the_class != classes.last %>, <% end %>
% end
% end

