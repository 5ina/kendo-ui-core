@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="@ViewBag.Meta">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")"/>
    <link rel="stylesheet" href="@Url.Content("~/content/responsive/responsive.css")" />

    <!-- Remote CDN-s -->    
<link href="http://cdn.kendostatic.com/staging/6c143feedb21be02ffcf53c6f31c5d59c33cf5e3/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/staging/6c143feedb21be02ffcf53c6f31c5d59c33cf5e3/styles/kendo.rtl.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/staging/6c143feedb21be02ffcf53c6f31c5d59c33cf5e3/styles/kendo.default.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/staging/6c143feedb21be02ffcf53c6f31c5d59c33cf5e3/styles/kendo.material.mobile.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/staging/6c143feedb21be02ffcf53c6f31c5d59c33cf5e3/styles/kendo.dataviz.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/staging/6c143feedb21be02ffcf53c6f31c5d59c33cf5e3/styles/kendo.dataviz.material.min.css" rel="stylesheet" />
  
        <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
        <script src="http://cdn.kendostatic.com/staging/6c143feedb21be02ffcf53c6f31c5d59c33cf5e3/js/jszip.min.js"></script>
        <script src="http://cdn.kendostatic.com/staging/6c143feedb21be02ffcf53c6f31c5d59c33cf5e3/js/kendo.all.min.js"></script>


</head>
<body>
    <header class="responsive-header">
        <h1>Responsive Kendo UI</h1>
        <button class="k-rpanel-toggle"><span class="k-icon k-i-hbars"></span></button>
        <ul id="responsive-nav">
            <li><a href="@Url.Action("Index", "Responsive")" id="responsive-about" class="btn">About</a></li>
            <li><a href="@Url.Action("Grid", "Responsive")" id="responsive-grid" class="btn">Grid</a></li>
            <li><a href="@Url.Action("Scheduler", "Responsive")" id="responsive-scheduler" class="btn">Scheduler</a></li>
            <li><a href="@Url.Action("Chart", "Responsive")#" id="responsive-chart" class="btn btn-primary">Charts</a></li>
            <li><a href="@Url.Action("ResponsivePanel", "Responsive")#" id="responsive-panel" class="btn btn-primary">ResponsivePanel</a></li>
        </ul>
    </header>

    <div>
        @RenderBody()
    </div>

    <div id="responsive-footer" class="responsive-section">    
         <div class="copyright">
            <p>Copyrigh &copy; 2002-2015 Telerik Inc. All rights reserved</p>
        </div>
    </div>

    <script>
        $("#responsive-nav").kendoResponsivePanel({
            breakpoint: 768,
            width: 320,
            orientation: "top",
            open: function () {
                $(".k-rpanel-toggle").addClass("activeHamburger");
            },
            close: function () {
                $(".activeHamburger").removeClass("activeHamburger");
            }
        });
    </script>

</body>
</html>
