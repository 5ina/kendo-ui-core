@{
    Layout = "ResponsiveLayout.cshtml";
}

<div class="responsive-section">
    <h2>Responsive Kendo UI Grid</h2>
    <p>This demo shows the basic responsive features of Kendo UI Grid.<br />        Resize the browser window and see how the Grid responds to screen size changes.</p>    <p>See this page on a mobile device too:</p>
    <div id="responsive-QR"></div>

    <script type="text/javascript">
        $("#responsive-QR").kendoQRCode({
            value: window.location.href,
            size: 110,
            color: "#333333",
            border: {
                color: "#666666",
                width: 1
            }
        });
    </script>
</div>

<div class="responsive-widget-wrapper">
    <div class="responsive-horizontal-ruler top-ruler"></div>

    <div class="responsive-vertical-ruler res-320"></div>

    <div class="responsive-vertical-ruler res-480"></div>

    <div class="responsive-vertical-ruler res-768"></div>

    <div class="responsive-vertical-ruler res-1024"></div>

    <div id="grid"></div>
    <script>
        $("#grid").kendoGrid({
            dataSource: {
                type: "odata",
                transport: {
                    read: "http://demos.telerik.com/kendo-ui/service/Northwind.svc/Customers"
                },
                pageSize: 15,
                group: { field: "ContactTitle" }
            },
            height: 400,
            groupable: true,
            sortable: true,
            selectable: "multiple",
            reorderable: true,
            resizable: true,
            filterable: true,
            pageable: {
                refresh: true,
                pageSizes: true,
                buttonCount: 5
            },
            columns: [
              {
                  field: "ContactName",
                  template: "<div class='customer-photo' style='background-image: url(http://demos.telerik.com/kendo-ui/content/web/Customers/${data.CustomerID}.jpg);'></div><div class='customer-name'>#: ContactName #</div>",
                  title: "Contact",
              
              }, {
                  field: "ContactTitle",
                  title: "Contact Title",
                  width: 220,
                  minScreenWidth: 564
              }, {
                  field: "Phone",
                  title: "Phone",
                  width: 140,
                  minScreenWidth: 704
              }, {
                  field: "CompanyName",
                  title: "Company Name",
                  width: 140,
                  minScreenWidth: 700
              }, {
                  field: "City",
                  title: "City",
                  width: 120,
                  minScreenWidth: 1000
              }
            ]
        });
    </script>

    <div class="responsive-horizontal-ruler bottom-ruler"></div>
</div>