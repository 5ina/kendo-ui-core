@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Kendo UI Mobile ThemeBuilder</title>
    <meta content="With Kendo UI Mobile ThemeBuilder you can modify the themes of all widgets in the framework so that they can match the look and feel of your mobile app." name="description" />
    @foreach (string styleName in ViewBag.styles) {
    @Html.StyleLink(styleName, (string)ViewBag.Theme, (string)ViewBag.CommonFile)
    }
    @if (!ViewBag.Debug) {
    @Html.Partial("GoogleAnalytics")
    }
    @foreach (string scriptName in @ViewBag.scripts)
    {
    <script src="@Url.Script(scriptName)"></script>
    }
    <script src="@Url.Content("~/content/mobilethemebuilder/scripts/slider.js")"></script>
    <script src="@Url.Content("~/content/mobilethemebuilder/scripts/colorengine.js")"></script>
    <script src="@Url.Content("~/content/mobilethemebuilder/scripts/gradientengine.js")"></script>
    <script src="@Url.Content("~/content/mobilethemebuilder/scripts/hslpicker.js")"></script>
    <script src="@Url.Content("~/content/mobilethemebuilder/scripts/gradientpicker.js")"></script>
    <script src="@Url.Content("~/content/mobilethemebuilder/scripts/patternpicker.js")"></script>
    <script src="@Url.Content("~/content/mobilethemebuilder/scripts/fontpicker.js")"></script>
    <link href="@Url.Content("~/content/mobilethemebuilder/styles/builder.css")" rel="stylesheet" />
</head>
<body class="body k-popup">
    @Html.Partial("GoogleTagManager")
    <script>
        $("body").css("visibility", "hidden");
    </script>
    <div class="branding">
        <img alt="Kendo UI Mobile ThemeBuilder logo" src="@Url.Content("~/content/shared/images/logos/mobile-themebuilder.png")"/>
    </div>
    <div class="header">
        <div class="tools">
            <ul class="menu">
                <li class="k-state-active">Colors</li>
                <li>Gradients</li>
                <li>Patterns</li>
                <li>Fonts</li>
            </ul>
            <div data-kendo-mobile-scroller="true">
                <div class="holder color-holder k-popup">
                    <div class="recents recent-colors"></div>
                </div>
            </div>
            <div data-kendo-mobile-scroller="true">
                <div class="holder gradient-holder k-popup">
                    <div class="recents recent-gradients"></div>
                </div>
            </div>
            <div data-kendo-mobile-scroller="true">
                <div class="holder pattern-holder k-popup">
                    <div class="recents recent-patterns"></div>
                </div>
            </div>
            <div data-kendo-mobile-scroller="true">
                <div class="holder font-holder k-popup">
                    <div class="recents recent-fonts"></div>
                </div>
            </div>
        </div>
        <div class="files">
            <a id="undoStyles" onclick="globalUndo()">Undo</a>
            <a id="redoStyles" onclick="globalRedo()">Redo</a>
            <span style="display: inline-block; width: 20px;"></span>
            <a id="resetStyles">Reset</a>
            <a id="importStyles">Import</a>
            <a id="exportStyles">Export</a>
        </div>
    </div>
    <div class="box">
        <div class="applyall" onclick="">
            <input id="applyall" type="checkbox" class="k-checkbox"/>
            <label for="applyall" class="k-checkbox">Apply to all platforms</label>
        </div>
        <div class="optionsSheet">
            <div class="items" onclick="">
                <div class="item-header">Platforms:</div>
                <div style="float: right;">
                    <input id="blackberrybox" type="checkbox" class="k-checkbox" />
                    <label for="blackberrybox" class="k-checkbox">BlackBerry</label><br />
                    <input id="wpbox" type="checkbox" class="k-checkbox" />
                    <label for="wpbox" class="k-checkbox">WinPhone</label><br />
                    <input id="flatbox" type="checkbox" class="k-checkbox" />
                    <label for="flatbox" class="k-checkbox">Flat skin</label>
                </div>
                <div>
                    <input id="ios7box" type="checkbox" class="k-checkbox" />
                    <label for="ios7box" class="k-checkbox">iOS 7</label>
                    <input id="iosbox" type="checkbox" class="k-checkbox"/>
                    <label for="iosbox" class="k-checkbox">iOS</label><br />
                    <input id="androidbox" type="checkbox" class="k-checkbox" />
                    <label for="androidbox" class="k-checkbox">Android</label>
                </div>
            </div>
            <div class="cover">
                <div class="wrench"></div>
            </div>
        </div>
        <div>
            <div id="ios7Device" class="device">
                <div data-role="view" data-layout="overview-layout" id="overview-cities" data-title="Favourite Cities">
                    <ul data-role="listview" data-style="inset" data-type="group">
                        <li>
                            Africa
                            <ul>
                                <li data-icon="toprated"><a>Nairobi</a></li>
                            </ul>
                        </li>
                        <li>
                            America
                            <ul>
                                <li data-icon="globe"><a>Boston</a></li>
                                <li data-icon="globe" class="km-state-active"><a>Ottawa</a></li>
                                <li data-icon="toprated"><a>San Francisco</a></li>
                            </ul>
                        </li>
                        <li>
                            Asia
                            <ul>
                                <li data-icon="globe"><a>Bombay</a></li>
                            </ul>
                        </li>
                        <li>
                            Australia
                            <ul>
                                <li data-icon="globe"><a>Melbourne</a></li>
                                <li data-icon="toprated"><a>Sydney</a></li>
                            </ul>
                        </li>
                        <li>
                            Europe
                            <ul>
                                <li data-icon="globe"><a>Cannes</a></li>
                                <li data-icon="globe"><a>Liverpool</a></li>
                                <li data-icon="toprated"><a>London</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

                <div data-role="view" data-layout="overview-layout" id="overview-gallery" data-title="Photo Gallery">
                    <div id="scrollview-container">
                        <div data-role="scrollview">
                            <div class="photo photo1"></div><div class="photo photo2"></div><div class="photo photo3"></div><div class="photo photo4"></div><div class="photo photo5"></div><div class="photo photo6"></div><div class="photo photo7"></div><div class="photo photo8"></div><div class="photo photo9"></div><div class="photo photo10"></div>
                        </div>
                    </div>
                </div>

                <div data-role="view" data-layout="overview-layout" id="overview-contacts">
                    <header data-role="header">
                        <div data-role="navbar">
                            <ul data-role="buttongroup" data-index="0">
                                <li>
                                    By Name
                                </li>
                                <li>
                                    By Family Name
                                </li>
                            </ul>
                        </div>
                    </header>
                    <ul data-role="listview" data-type="group">
                        <li>
                            A
                            <ul>
                                <li><h2>Ann Devon</h2><img src="@Url.Content("~/content/mobilethemebuilder/images/ann.jpg")" /></li>
                                <li><h2>Annette Roulet</h2><img src="@Url.Content("~/content/mobilethemebuilder/images/annette.jpg")" /></li>
                                <li><h2>Antonio Moreno</h2><img src="@Url.Content("~/content/mobilethemebuilder/images/antonio.jpg")" /></li>
                            </ul>
                        </li>
                        <li>
                            C
                            <ul>
                                <li><h2>Carine Schmitt</h2><img src="@Url.Content("~/content/mobilethemebuilder/images/carine.jpg")" /></li>
                                <li><h2>Catherine Dewey</h2><img src="@Url.Content("~/content/mobilethemebuilder/images/catherine.jpg")" /></li>
                            </ul>
                        </li>
                        <li>
                           D
                            <ul>
                                <li><h2>Daniel Tonini</h2><img src="@Url.Content("~/content/mobilethemebuilder/images/daniel.jpg")" /></li>
                                <li><h2>Diego Roel</h2><img src="@Url.Content("~/content/mobilethemebuilder/images/diego.jpg")" /></li>
                            </ul>
                        </li>
                        <li>
                            E
                            <ul>
                                <li><h2>Eduardo Saavedra</h2><img src="@Url.Content("~/content/mobilethemebuilder/images/eduardo.jpg")" /></li>
                                <li><h2>Elizabeth Brown</h2><img src="@Url.Content("~/content/mobilethemebuilder/images/elizabeth.jpg")" /></li>
                            </ul>
                        </li>
                        <li>
                            F
                            <ul>
                                <li><h2>Felipe Izquierdo</h2><img src="@Url.Content("~/content/mobilethemebuilder/images/felipe.jpg")" /></li>
                                <li><h2>Fran Wilson</h2><img src="@Url.Content("~/content/mobilethemebuilder/images/fran.jpg")" /></li>
                                <li><h2>Francisco Chang</h2><img src="@Url.Content("~/content/mobilethemebuilder/images/francisco.jpg")" /></li>
                            </ul>
                        </li>
                    </ul>
                </div>

                <div data-role="view" data-layout="overview-layout" data-show="mobileAccountViewInit" id="overview-account" data-title="Account Settings">
                    <ul id="settings-view" data-index="0">
                        <li>
                            Profile
                        </li>
                        <li>
                            General
                        </li>
                        <li>
                            Group
                        </li>
                    </ul>
                    <ul data-role="listview" data-style="inset" data-type="group">
                        <li>
                            <ul>
                                <li><h2>Christina <span>Berglund</span></h2><img src="@Url.Content("~/content/mobilethemebuilder/images/christina.jpg")" /></li>
                                <li>Username <span class="value">christina</span></li>
                                <li>Email <span class="value">clientservice at telerik.com</span></li>
                            </ul>
                        </li>
                        <li>
                            Languages
                            <ul>
                                <li>English <span class="value">Native</span></li>
                                <li>French<span class="value">Advanced</span></li>
                            </ul>
                        </li>
                        <li>
                            PC Skills
                            <ul>
                                <li>MS Word</li>
                                <li>MS Excel</li>
                                <li>MS Outlook</li>
                                <li>MS PowerPoint</li>
                                <li>Windows (XP, Vista)</li>
                                <li>Internet</li>
                            </ul>
                        </li>
                    </ul>
                    <ul data-role="listview" data-style="inset" data-type="group" style="display:none">
                        <li>
                            General Settings
                            <ul>
                                <li>Notifications <input type="checkbox" data-role="switch" checked></li>
                                <li>Local Services <input type="checkbox" data-role="switch"></li>
                                <li><a>About</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul data-role="listview" data-style="inset" data-type="group" style="display:none">
                        <li>
                            Group
                            <ul>
                                <li><a>Your Group Name</a></li>
                                <li><a>Group Email</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

                <div data-role="layout" data-id="overview-layout">
                    <header data-role="header">
                        <div data-role="navbar">
                            <a class="nav-button" data-align="left" data-role="backbutton">Back</a>
                            <span data-role="view-title">My Contacts</span>
                            <a class="km-state-active" data-align="right" data-role="button">Active</a>
                        </div>
                    </header>

                    <footer data-role="footer">
                        <div data-role="tabstrip">
                            <a data-icon="globe" href="#overview-cities">Cities</a>
                            <a data-icon="organize" href="#overview-gallery">Gallery</a>
                            <a data-icon="contacts" href="#overview-contacts">Contacts</a>
                            <a data-icon="settings" href="#overview-account">My Account</a>
                        </div>
                    </footer>
                </div>


                <style>
                    [id^="overview-contacts"] h2,
                    [id^="overview-cities"] h2 {
                        display: inline-block;
                        font-size: 1.1em;
                        margin: 1em 0 .5em 1em;
                    }
                    [id^="overview-account"] h2 {
                        display: inline-block;
                        font-size: 1.1em;
                        margin: 1.5em 0 0 1em;
                    }
                    [id^="overview-account"] h2 span {
                        display: block;
                        clear: both;
                        font-size: 2em;
                        margin: .2em 0 0 0;
                    }
                    [id^="overview-contacts"] img,
                    [id^="overview-cities"] img,
                    [id^="overview-account"] img {
                        float: left;
                        width: 4em;
                        height: 4em;
                        margin: 0;
                        -webkit-box-shadow: 0 1px 3px #333;
                        box-shadow: 0 1px 3px #333;
                        -webkit-border-radius: 8px;
                        border-radius: 8px;
                    }
                    [id^="overview-account"] img {
                        width: 5em;
                        height: 5em;
                        margin: 1em;
                    }
                    [id^="overview-account"] .value {
                        float: right;
                        color: #ccc;
                    }
                    [id^="settings-view"] {
                        margin: 1em auto .4em auto;
                    }
                    [id^="overview-gallery"] .photo {
                        width: 100%;
                        margin: 20px 0 7px;
                        height: 200px;
                        display: inline-block;
                        -webkit-background-size: auto 100%;
                        background-size: auto 100%;
                        background-repeat: no-repeat;
                        background-position: center center;
                        -webkit-transform: translatez(0);
                    }
                    .photo1 {background-image: url("@Url.Content("~/content/mobilethemebuilder/images/cities/sydney.jpg")");}
                    .photo2 {background-image: url("@Url.Content("~/content/mobilethemebuilder/images/cities/bonn.jpg")");}
                    .photo3 {background-image: url("@Url.Content("~/content/mobilethemebuilder/images/cities/boston.jpg")");}
                    .photo4 {background-image: url("@Url.Content("~/content/mobilethemebuilder/images/cities/cairo.jpg")");}
                    .photo5 {background-image: url("@Url.Content("~/content/mobilethemebuilder/images/cities/cancun.jpg")");}
                    .photo6 {background-image: url("@Url.Content("~/content/mobilethemebuilder/images/cities/cape-town.jpg")");}
                    .photo7 {background-image: url("@Url.Content("~/content/mobilethemebuilder/images/cities/liverpool.jpg")");}
                    .photo8 {background-image: url("@Url.Content("~/content/mobilethemebuilder/images/cities/london.jpg")");}
                    .photo9 {background-image: url("@Url.Content("~/content/mobilethemebuilder/images/cities/melbourne.jpg")");}
                    .photo10 {background-image: url("@Url.Content("~/content/mobilethemebuilder/images/cities/san-francisco.jpg")");}

                    [id^="scrollview-container"] {
                        width: 100%;
                        margin: 3px 0 1em 0;
                        padding-bottom: 10px;
                        background: rgba(0,0,0,.1);
                        border: 1px solid rgba(0,0,0,.3);
                        border-width: 1px 0;
                        box-shadow: 0 1px 1px rgba(255,255,255,.3);
                    }
                    [id^="overview-gallery"] .km-ios .km-content {
                        background: #bbb;
                    }
                </style>
            </div>
        </div>
        <div id="exportWindow">
            <textarea class="k-textbox" readonly="readonly"></textarea>
        </div>
        <div id="importWindow">
            <textarea class="k-textbox"></textarea>
            <br /><br />
            <input id="mixStyles" type="checkbox" checked="checked" class="k-checkbox"/>
            <label for="mixStyles" class="k-checkbox">Mix with existing styles</label>
            <button class="k-button" style="float: right;" id="import">Import</button>
        </div>
    </div>
    <script src="@Url.Content("~/content/mobilethemebuilder/scripts/themebuilder.js")"></script>
</body>
</html>
