
        <div id="example">            
            <div class="demo-section k-content">
                <div class="k-rtl">
                    <h4>RTL DropDownList</h4>
                    <input id="input" style="width: 100%;"/>
                </div>
            </div>
            <script>
                $(document).ready(function() {
                    var data = [
                        {text: "Item1", value:"1"},
                        {text: "Item2", value:"2"},
                        {text: "Item3", value:"3"}
                    ];

                    $("#input").kendoDropDownList({
                        dataTextField: "text",
                        dataValueField: "value",
                        dataSource: data
                    });
                });
            </script>
        </div>