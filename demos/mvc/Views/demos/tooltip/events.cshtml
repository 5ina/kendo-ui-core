        <div id="example">

            <div class="demo-section k-header">
                <span id="autohide-true" class="k-button wider">Hover me!</span>
                <span id="autohide-false" class="k-button wider">Hover me too!</span>
            </div>

            <script>
                function onShow(e) {
                    kendoConsole.log("event :: show");
                }

                function onHide(e) {
                    kendoConsole.log("event :: hide");
                }

                $(document).ready(function() {
                    $("#autohide-true").kendoTooltip({
                        content: "Hello!",
                        show: onShow,
                        hide: onHide,
                        position: "top"
                    });
                    $("#autohide-false").kendoTooltip({
                        autoHide: false,
                        show: onShow,
                        hide: onHide,
                        position: "top",
                        content: "Hello!"
                    });
                });
            </script>
            
            <div class="box">
                <h4>Console log</h4>
                <div class="console"></div>
            </div>
            <style>
                .demo-section {
                    text-align: center;
                }
                .wider {
                    display: block;
                    margin: 20px 0;
                    padding: 15px 8px;
                    line-height: 23px;
                    width: 100%;
                }
            </style>
        </div>
