<div id="example" role="application">
    <div class="demo-section k-content wide">
        <div>
            <select id="optional" data-placeholder="Select attendees..."></select>
            <select id="selected" multiple="multiple" data-placeholder="Selected attendees..."></select>
        </div>
    </div>
    <div class="demo-section k-content wide">
        <h4>Console log</h4>
        <div class="console"></div>
    </div>
    <script>
        $(document).ready(function () {

            function onAdd(e) {
                kendoConsole.log("event: add");
            };

            function onChange(e) {
                kendoConsole.log("event: change");
            };

            function onDataBound(e) {
                if ("kendoConsole" in window) {
                    kendoConsole.log("event :: dataBound");
                }
            };

            function onEnd(e) {
                kendoConsole.log("event: end");
            };

            function onMove(e) {
                kendoConsole.log("event: move");
            };

            function onRemove(e) {
                kendoConsole.log("event: remove");
            };

            function onReorder(e) {
                kendoConsole.log("event: reorder");
            };

            function onStart(e) {
                kendoConsole.log("event: start");
            };

            $("#optional").kendoListBox({
                connectWith: "#selected",
                draggable: true,
                dropSources: ["selected"],
                dataTextField: "ContactName",
                dataValueField: "CustomerID",
                selectable: "multiple",
                dataSource: {
                    type: "odata",
                    transport: {
                        read: "https://demos.telerik.com/kendo-ui/service/Northwind.svc/Customers"
                    },
                    pageSize: 10
                },
                add: onAdd,
                change: onChange,
                dataBound: onDataBound,
                end: onEnd,
                move: onMove,
                remove: onRemove,
                reorder: onReorder,
                start: onStart
            });

            $("#selected").kendoListBox({
                connectWith: "#optional",
                draggable: true,
                dropSources: ["optional"],
                dataTextField: "ContactName",
                dataValueField: "CustomerID",
                selectable: "multiple",
                add: onAdd,
                change: onChange,
                dataBound: onDataBound,
                end: onEnd,
                move: onMove,
                remove: onRemove,
                reorder: onReorder,
                start: onStart
            });
        });
    </script>
</div>
<style>
    #example .k-listbox:nth-child(1) {
        width: 48%;
        float: left;
    }

    #example .k-listbox:nth-child(2) {
        width: 48%;
        float: right;
    }
</style>
