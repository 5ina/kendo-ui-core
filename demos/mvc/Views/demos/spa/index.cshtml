@{
    ViewBag.ShowCodeStrip = false;
}
<div id="example" class="k-web overview">
            <div id="websushi" class="wide-box">
                <h2>Sushi</h2>
                <p>This single-page imaginary sushi online ordering app reuses the popular <a href="http://demos.telerik.com/kendo-ui/sushi/" title="Kendo UI Mobile demo">Kendo UI Mobile demo</a>, applying a desktop optimized interface.</p>
                <a class="launchButton" target="_blank" href="../websushi/">Launch Sushi</a>
            </div>
            <div id="aeroviewr" class="wide-box">
                <h2>AeroViewr</h2>
                <p>A sleek lightbox interface for browsing <a href="http://500px.com/" title="500px" target="_blank">500px</a> content, including bookmarkable search results.</p>
                <a class="launchButton large" target="_blank" href="../aeroviewr/">Launch AeroViewr</a>
            </div>
    <style>
        #websushi {
            background: url('@Url.Content("~/content/shared/images/websushi.jpg")') no-repeat center bottom transparent;
            height: 360px;
            padding: 80px 80px 0 620px;
        }
        #aeroviewr {
            background: url('@Url.Content("~/content/shared/images/aeroviewr.jpg")') no-repeat center bottom transparent;
            height: 335px;
            padding: 30px 620px 0 50px;
        }
        .wide-box {
            color: #565656;
            font-size: 13px;
            line-height: 1.4;
            font-family: Arial,Helvetica,sans-serif;
            margin: 0 auto;
            width: 255px;
        }
        .wide-box h2 {
            color: #333;
            font-size: 40px;
            margin: 0;
        }
        .wide-box p a {
            color: #0487C4;
            text-decoration: none;
        }
        .wide-box p a:hover {
            text-decoration: underline;
        }
        .large {
            width: 130px;
        }
        
        @@media only screen and (max-width : 720px) {
        
            .wide-box {
                width: 100%;
                box-sizing: border-box;
            }
            
            #websushi,
            #aeroviewr {
                background: none;
                padding: 30px;
                height: 100%;
            }
        }
    </style>
</div>

