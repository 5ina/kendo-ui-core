<div id="example">
    <div class="box wide">
        <label for="language">Choose language:</label>
        <input id="language" value="en-US" />
    </div>

    <textarea id="editor" rows="10" cols="30" style="width:100%;height:400px"></textarea>

    <script>

        function changeLanguage() {
            kendo.ui.progress($("#editor"), true);
            var baseUrl = '@Url.Script("messages/kendo.messages.", false)';
            $.getScript(baseUrl + this.value() + ".min.js", function() {
                kendo.ui.progress($("#editor"), false);
                createEditor();
            });
        }

        $(document).ready(function() {
            $("#language").kendoDropDownList({
                change: changeLanguage,
                dataTextField: "text",
                dataValueField: "value",
                dataSource: [
                    {text: "bg-BG"},
                    {text: "zh-CN"},
                    {text: "en-US"},
                ]
            });

            $("#language").data("kendoDropDownList").trigger("change");
        });

        function createEditor() {
            var element = $("#editor"),
                editor = element.data("kendoEditor");

            if (editor) {
                wrapper = editor.wrapper;
                editor.destroy();
                wrapper.remove();
                element.appendTo($("#example"));
            }

            element.kendoEditor({
                encoded: false,
                tools: [
                    "bold",
                    "italic",
                    "underline",
                    "strikethrough",
                    "justifyLeft",
                    "justifyCenter",
                    "justifyRight",
                    "justifyFull",
                    "insertUnorderedList",
                    "insertOrderedList",
                    "indent",
                    "outdent",
                    "createLink",
                    "unlink",
                    "insertImage",
                    "insertFile",
                    "subscript",
                    "superscript",
                    "createTable",
                    "addRowAbove",
                    "addRowBelow",
                    "addColumnLeft",
                    "addColumnRight",
                    "deleteRow",
                    "deleteColumn",
                    "viewHtml",
                    "formatting",
                    "cleanFormatting",
                    "fontName",
                    "fontSize",
                    "foreColor",
                    "backColor"
                ]
            });
        }

    </script>
</div>
