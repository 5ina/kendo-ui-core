    <div id="example">
      <div class="demo-section k-content">
        <div class="hasMenu" ng-style="{ 'padding': '3em',
                                       'background': '#d1d1d1' }">
          Right-click me
        </div>
      </div>
      <ul 
          data-role="contextmenu"
          data-filter=".hasMenu"
          data-bind="events:{select:onSelect, open:onOpen, close: onClose}">
        <li>Item 1
          <ul>
            <li>Subitem 1.1</li>
            <li>Subitem 1.2</li>
            <li>Subitem 1.3</li>
          </ul>
        </li>
        <li>Item 2</li>
        <li>Item 3</li>
      </ul>
      <div style="padding-top: 2em;">
        <h4>Console</h4>
        <div class="console"></div>
      </div>
      <script>
        var viewModel = kendo.observable({
          isVisible: false,
          onSelect: function(e) {
            console.log(viewModel.isVisible)
            var text =  $(e.item).children(".k-link").text();
            kendoConsole.log("event :: select(" + text + ")");
          },
          onOpen:function(e){
            kendoConsole.log("event :: open(the menu is opened)");
          },
          onClose:function(e){
            kendoConsole.log("event :: close(the menu is closed)");
          },
        });
        kendo.bind($("#example"), viewModel);
      </script>
    </div>