@(Html.Kendo().Grid<Kendo.Mvc.Examples.Models.Product>()
	.Name("grid")
	.Columns(columns => {
		columns.Template("#=UnitPrice#").HtmlAttributes(new { id="222" });
	})
	.Pageable()
	.DataSource(dataSource => dataSource
		.Ajax()
		.PageSize(10)
		.Read("Products", "Grid")
	)
)
