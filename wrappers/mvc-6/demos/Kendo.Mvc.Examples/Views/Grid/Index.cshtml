@using Kendo.Mvc.UI

@(Html.Kendo().Grid<Kendo.Mvc.Examples.Models.Product>()
	.Name("grid")
	.Resizable(resizable => resizable.Columns(true))
	.Reorderable(resizable => resizable.Columns(true))
	.ColumnMenu()
	.Columns(columns => {
		columns.Command(command => command.Edit());
		columns.Bound(p => p.ProductName);
		columns.Bound(p => p.UnitPrice);
	})
	.ToolBar(toolbar => {
		toolbar.Create();
		toolbar.Save().SaveText("save").CancelText("cancel").HtmlAttributes(new { style= "background:red" });
		toolbar.Pdf();
		toolbar.Excel();
		toolbar.Custom().Name("fooo");
	})
	.Editable(editable => editable.Mode(GridEditMode.PopUp))
	.Pageable()
	.Groupable()
	.Filterable()
	.Sortable()
	.Scrollable()
	.Selectable(selectable => selectable.Mode(GridSelectionMode.Multiple).Type(GridSelectionType.Row))
	.DataSource(dataSource => dataSource
		.Ajax()
		.PageSize(10)
		.Model(model => model.Id(p => p.ProductID))
		.ServerOperation(false)
		.Read("Products", "Grid")
	)
)


