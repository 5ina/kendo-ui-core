<link href="http://cdn.kendostatic.com/2015.1.225/styles/kendo.rtl.min.css" rel="stylesheet" />
<link href="http://cdn.kendostatic.com/2015.1.225/styles/kendo.material.min.css" rel="stylesheet" />


<script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
