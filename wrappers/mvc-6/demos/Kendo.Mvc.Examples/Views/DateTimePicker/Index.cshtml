@using Kendo.Mvc.UI

<div id='to-do'>
	@(Html.Kendo().DateTimePicker()
		.Name("datetimepicker")
		.Value(DateTime.Now)
        .DateInput()
	)
</div>

<style>
    .k-datetimepicker
    {
        width: 250px;
    }
    #to-do {
        height: 52px;
        width: 290px;
        margin: 30px auto;
        padding: 91px 0 0 150px;
        background: url('@Url.Content("~/shared/web/datepicker/todo.png")') transparent no-repeat 0 0;
    }
</style>