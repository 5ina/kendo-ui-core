<div class="demo-section k-content">
    <h4>Show e-mails from:</h4>
    @(Html.Kendo().DateInput()
              .Name("dateinput1")
              .Value(new DateTime())
              .HtmlAttributes(new { style = "width: 100%" })
    )
    <h4 style="margin-top: 2em;">Add to archive mail from:</h4>
    @(Html.Kendo().DateInput()
              .Name("dateinput2")
              .Format("MMMM yyyy")
              .HtmlAttributes(new { style = "width: 100%" })
    )
</div>