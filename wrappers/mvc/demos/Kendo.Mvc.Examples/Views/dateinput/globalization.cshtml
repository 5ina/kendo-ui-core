@section HeadContent {
    <script src="@Url.Content("~/Scripts/cultures/kendo.culture.de-DE.min.js")"></script>
}

<script type="text/javascript">
    //set culture of the Kendo UI
    kendo.culture("de-DE");
</script>

@{ 
    Culture = "de-DE";
}

<div class="demo-section k-content">
    <h4>Enter date</h4>
@(Html.Kendo().DateInput()
      .Name("dateinput")
      .Value(DateTime.Today)
)
</div>

