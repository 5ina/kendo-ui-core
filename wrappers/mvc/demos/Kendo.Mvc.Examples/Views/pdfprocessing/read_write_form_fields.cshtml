@using (Html.BeginForm("Download_Modified_Document", "PdfProcessing"))
{
    <div id="example">
        <ul class="fieldlist">
            <li>
                @Html.Label("Text field:")
                @Html.Kendo().TextBox().Name("textbox").HtmlAttributes(new { style = "width: 100%;" })
            </li>
            <li>
                @Html.Label("Choice field:")
                @Html.TextArea("textarea", new { @class = "k-textbox", style = "width: 100%;", id = "textArea" })
            </li>
        </ul>
        <div class="container">
            <div id="radioButton">
                <ul class="fieldlist">
                    <li>
                        @(Html.Kendo().RadioButton().Name("rb1").Value("1").HtmlAttributes(new { @name = "rb" }).Label("Radio button 1"))
                    </li>
                    <li>
                        @(Html.Kendo().RadioButton().Name("rb2").Value("2").Checked(true).HtmlAttributes(new { @name = "rb" }).Label("Radio button 2"))
                    </li>
                    <li>
                        @(Html.Kendo().RadioButton().Name("rb3").Value("3").HtmlAttributes(new { @name = "rb" }).Label("Radio button 3"))
                    </li>
                </ul>
            </div>
            <div id="checkBox">
                <ul class="fieldlist">
                    <li>
                        @(Html.Kendo().CheckBox().Name("cb1").Checked(true).Label("CheckBox 1"))
                    </li>
                    <li>
                        @(Html.Kendo().CheckBox().Name("cb2").Checked(true).Label("CheckBox 2"))
                    </li>
                    <li>
                        @(Html.Kendo().CheckBox().Name("cb3").Checked(false).Label("CheckBox 3"))
                    </li>

                </ul>
            </div>
        </div>
    </div>

    <hr class="clear" />
    <input type="submit" class="k-button k-primary wide-btn" value="Download" />
}

<style>
    .container {
        margin-top: 30px;
        display: inline-block;
    }

    #radioButton {
        width: 40%;
        float: left;
    }

    #checkBox {
        width: 40%;
        float: right;
    }

    .documentImage {
        width: 100%;
    }

    .fieldlist {
        margin: 0 0 -2em;
        padding: 0;
    }

        .fieldlist li {
            list-style: none;
            padding-bottom: 2em;
        }

        .fieldlist label {
            display: block;
            padding-bottom: 1em;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 12px;
            color: #444;
        }
</style>